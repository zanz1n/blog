package templates

import "strconv"

type ErrorData struct {
	Message    string `json:"message"`
	Code       int32  `json:"error_code"`
	HttpStatus int    `json:"-"`
}

templ ErrorPage(e ErrorData) {
	@Page(errorLayout(e), e.Message)
}

templ errorLayout(e ErrorData) {
	<div class="flex flex-col size-full justify-between">
		@Header(nil)
		<div class="prose mx-auto flex flex-col items-center content-center">
			<div class="text-center">
				<h1 class="mt-0 mb-1 sm:text-9xl text-8xl">
					<b>{ strconv.Itoa(e.HttpStatus) }</b>
				</h1>
				<h2 class="mt-1 mb-0 sm:text-3xl text-xl">{ e.Message }</h2>
			</div>
		</div>
		<div class="sm:block hidden"></div>
		@Footer()
	</div>
}
