templ Footer() {
	<footer class="footer footer-horizontal bg-base-200 items-center p-4">
		<aside class="grid-flow-col items-center">
			@svgHashtag()
			<p>Copyright Â© { strconv.Itoa(time.Now().Year()) } - Izan Rodrigues</p>
		</aside>
		<nav class="grid-flow-col gap-4 place-self-center justify-self-end">
			<a target="_blank" href="https://github.com/zanz1n/blog">
				@svgGithub()
			</a>
			<a target="_blank" href="https://github.com/zanz1n/blog/issues">
				@svgBug()
			</a>
		</nav>
	</footer>
}

